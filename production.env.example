# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Iranian Legal Archive System
# ========================================

# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=production
PORT=3000
HTTPS_PORT=443
HOST=0.0.0.0

# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=iranian_legal_archive
DB_USER=legal_archive_user
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD
DB_SSL=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD
REDIS_DB=0

# Supabase (if using cloud)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# ========================================
# AI MODELS CONFIGURATION
# ========================================
# Persian BERT Model
PERSIAN_BERT_MODEL=HooshvareLab/bert-base-parsbert-uncased
AI_MODEL_PATH=./models/persian-bert-legal
AI_MODEL_CACHE_DIR=/opt/ai-models
AI_BATCH_SIZE=32
AI_MAX_CONCURRENT_REQUESTS=10

# Hugging Face
HUGGINGFACE_API_KEY=YOUR_HUGGINGFACE_API_TOKEN_HERE
HUGGINGFACE_CACHE_DIR=/opt/huggingface-cache

# ========================================
# MONITORING & LOGGING
# ========================================
# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=YOUR_ELASTICSEARCH_PASSWORD
ELASTICSEARCH_INDEX_PREFIX=iranian-legal-archive

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_ENABLED=true

# Grafana
GRAFANA_PORT=3001
GRAFANA_ENABLED=true
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=YOUR_GRAFANA_PASSWORD

# ========================================
# SECURITY & SSL
# ========================================
# SSL Certificates
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem
SSL_AUTO_RENEW=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# EXTERNAL SERVICES
# ========================================
# Iranian DNS Servers
IRANIAN_DNS_PRIMARY=8.8.8.8
IRANIAN_DNS_SECONDARY=1.1.1.1

# Web Scraping
SCRAPING_TIMEOUT=30000
SCRAPING_MAX_RETRIES=3
SCRAPING_USER_AGENT=Mozilla/5.0 (compatible; IranianLegalArchive/1.0)

# ========================================
# PERFORMANCE & CACHING
# ========================================
# Memory Cache
MEMORY_CACHE_TTL=3600
MEMORY_CACHE_MAX_SIZE=1000

# File Cache
FILE_CACHE_DIR=/opt/cache
FILE_CACHE_TTL=86400

# ========================================
# BACKUP & RECOVERY
# ========================================
# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/opt/backups

# ========================================
# NOTIFICATIONS
# ========================================
# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=notifications@your-domain.com

# Slack Notifications
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_CHANNEL=#legal-archive-alerts

# ========================================
# DEVELOPMENT & DEBUGGING
# ========================================
DEBUG=false
LOG_LEVEL=info
ENABLE_SWAGGER=false
ENABLE_HEALTH_CHECKS=true

# ========================================
# CUSTOMIZATION
# ========================================
# System Branding
SYSTEM_NAME=Iranian Legal Archive System
SYSTEM_VERSION=2.0.0
SYSTEM_DESCRIPTION=Comprehensive Iranian Legal Document Management and Analysis Platform

# Legal Categories
LEGAL_CATEGORIES=civil,commercial,criminal,constitutional,administrative,family,property,labor,tax,environmental

# Document Types
DOCUMENT_TYPES=law,regulation,judgment,contract,agreement,decree,resolution,circular,guideline,policy
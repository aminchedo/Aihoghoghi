{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "watchPatterns": [
      "src/**"
    ]
  },
  "deploy": {
    "startCommand": "npm run preview",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "VITE_API_URL": "https://iranian-legal-archive-backend.railway.app/api",
        "VITE_WS_URL": "wss://iranian-legal-archive-backend.railway.app/ws"
      }
    },
    "staging": {
      "variables": {
        "NODE_ENV": "staging",
        "VITE_API_URL": "https://iranian-legal-archive-staging.railway.app/api",
        "VITE_WS_URL": "wss://iranian-legal-archive-staging.railway.app/ws"
      }
    }
  }
}